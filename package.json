{
  "name": "gmail-desktop",
  "productName": "Gmail Desktop",
  "version": "1.0.0",
  "description": "An unofficial Gmail Desktop App built with Electron",
  "private": true,
  "main": "src/app.js",
  "scripts": {
    "precommit": "lint-staged",
    "test": "xo",
    "prettier": "prettier --no-semi --single-quote --write",
    "prettify": "npm run prettier -- src/*.js",
    "start": "electron .",
    "build:osx": "electron-packager . --out=build --overwrite --platform=darwin --arch=x64 --app-version=$npm_package_version --icon=assets/icon.icns  --protocol-name=\"Email Address URL\" --protocol=\"mailto\"",
    "build": "npm run build:osx"
  },
  "repository": "timche/gmail-desktop",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.7.5",
    "electron-packager": "^8.7.2",
    "eslint-config-prettier": "^2.3.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": [
      "prettier"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm test",
      "npm run prettier",
      "git add"
    ]
  }
}
