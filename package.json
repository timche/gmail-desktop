{
  "name": "gmail-desktop",
  "productName": "Gmail Desktop",
  "version": "2.0.0",
  "description": "Unofficial Gmail Desktop App",
  "private": true,
  "repository": "timche/gmail-desktop",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "main": "src/app.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "precommit": "pretty-quick --staged",
    "lint": "xo",
    "prettier": "prettier --no-semi --single-quote --write",
    "prettify": "npm run prettier -- src/*.js",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos --linux --windows --publish never"
  },
  "dependencies": {
    "electron-debug": "^2.1.0",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "husky": "^0.14.3",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "xo": "^0.24.0"
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "bracketSpacing": true,
    "singleQuote": true
  },
  "xo": {
    "prettier": true
  },
  "build": {
    "files": [
      "**/*"
    ],
    "appId": "io.cheung.gmail-desktop",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Office"
    }
  }
}
