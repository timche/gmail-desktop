{
  "name": "gmail-desktop",
  "productName": "Gmail Desktop",
  "version": "2.20.4",
  "description": "Unofficial Gmail Desktop App",
  "private": true,
  "repository": "timche/gmail-desktop",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "main": "dist-js/app.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier --write",
    "prettify": "yarn prettier -- 'src/**/*.ts'",
    "lint": "run-p lint:*",
    "lint:ts": "xo",
    "lint:css": "stylelint 'css/*.css'",
    "start": "tsc && electron .",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder --macos --linux --windows --publish never"
  },
  "dependencies": {
    "electron-context-menu": "^2.3.0",
    "electron-debug": "^3.1.0",
    "electron-dl": "^3.0.2",
    "electron-log": "^4.3.0",
    "electron-store": "6.0.1",
    "electron-updater": "^4.3.5",
    "electron-util": "^0.14.2",
    "element-ready": "^4.1.1",
    "got": "^11.8.0",
    "is-online": "^9.0.0",
    "p-wait-for": "^3.1.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.4.0",
    "@types/semver": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "electron": "^10.2.0",
    "electron-builder": "^22.9.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-xo-typescript": "^0.18.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-xo": "^0.15.0",
    "typescript": "~4.0.5",
    "xo": "^0.24.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "xo --fix",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "useTabs": false,
    "semi": false,
    "singleQuote": true
  },
  "xo": {
    "extends": [
      "xo-typescript",
      "prettier/@typescript-eslint"
    ],
    "extensions": [
      "ts"
    ],
    "envs": [
      "node",
      "browser"
    ],
    "prettier": true
  },
  "stylelint": {
    "extends": "stylelint-config-xo",
    "rules": {
      "declaration-no-important": null,
      "selector-class-pattern": null,
      "indentation": 2,
      "property-no-vendor-prefix": null
    }
  },
  "build": {
    "artifactName": "${name}-${version}-${os}.${ext}",
    "files": [
      "**/*"
    ],
    "appId": "io.cheung.gmail-desktop",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "pacman",
        "snap",
        "tar.bz2"
      ],
      "category": "Network;Office"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
