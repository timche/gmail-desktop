{
  "name": "gmail-desktop",
  "productName": "Gmail Desktop",
  "version": "2.2.0",
  "description": "Unofficial Gmail Desktop App",
  "private": true,
  "repository": "timche/gmail-desktop",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "main": "dist-js/app.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "precommit": "lint-staged",
    "prettier": "prettier --write",
    "prettify": "npm run prettier -- 'src/**/*.ts'",
    "lint": "xo",
    "type-check": "tsc --noEmit",
    "start": "tsc && electron .",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder --macos --linux --windows --publish never"
  },
  "dependencies": {
    "electron-debug": "^2.1.0",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.11.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.3.0",
    "@types/electron-settings": "^3.1.1",
    "@types/semver": "^5.5.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-xo-typescript": "^0.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "typescript": "^3.3.4000",
    "xo": "^0.24.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "xo --fix",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "useTabs": false,
    "semi": false,
    "singleQuote": true
  },
  "xo": {
    "extends": [
      "xo-typescript",
      "prettier/@typescript-eslint"
    ],
    "extensions": [
      "ts"
    ],
    "envs": [
      "node",
      "browser"
    ],
    "prettier": true
  },
  "build": {
    "files": [
      "**/*"
    ],
    "appId": "io.cheung.gmail-desktop",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Office"
    }
  }
}
